<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonUsageFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usage Stats"/>

    <Button
        android:id="@+id/buttonElizaFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat with Eliza"/>

    <Button
        android:id="@+id/buttonCallFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read your call logs"/>

    <Button
        android:id="@+id/buttonPersonality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get my persona"/>

</LinearLayout>