<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/received_msg"
        android:textColor="@color/received_message_color"
        android:layout_margin="10dp"
        android:padding="8dp"
        android:elevation="2dp"
        android:background="@drawable/left_background"/>

    <TextView
        android:id="@+id/sent_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/right_background"
        android:elevation="2dp"
        android:padding="8dp"
        android:textColor="@color/sent_message_color"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>